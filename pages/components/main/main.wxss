/* pages/userData/userData.wxss */
.user-info-page{
  /* height: 100vh; */
  height: calc(100vh - 92px) !important;
  background-color: rgba(246, 249, 252, 1);
  overflow: hidden;
}
.user-info-header{
  position: relative;
  top: 0;
  left: 0;
  height: 208px;
  padding: 44px 15px 0px 15px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  /* background: linear-gradient( 180deg, #ECF4FF 0%, #FFFFFF 97%); */
}
.user-back{
  position: absolute;
  width: 375px;
  height: 227px;
  z-index: -1;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.nav {
  height: 44px;
  display: flex;
  align-items: center;
}
.title{
  margin-left: 120px;
}
.user-info{
  margin-top: 20px;
  display: flex;
  align-items: center;
}
.user-header{
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-right: 10px;
}
.info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.user-name {
  font-size: 18px;
  color: #3D3D3D;
}
.follow-vermicelli {
  margin-top: 18px;
  display: flex;
  align-items: center;
}
.follow-item{
  width: 125px;
  height: 40px;
  text-align: center;
}
.number{
  font-size: 20px;
  color: #333333;
}
.line{
  height: 30px;
  border-right: 1px solid rgba(0, 0, 0, 0.05);
}
.share{
  width: 82px;
  height: 32px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  background: linear-gradient( 270deg, #70AFFD 1%, #0080F7 100%);
  border-radius: 16px;
}
.follow-title {
  font-size: 13px;
  color: #666666;
}
.user-info-content {
  flex: 1;
  overflow: hidden;
}
.van-tabs__nav{
  background-color: rgba(249, 249, 249, 1) !important;
}
.van-tabs__line{
  background-color: rgba(0, 71, 159, 1) !important;
}
.user-info-bottom{
  position: fixed;
  width: 100%;
  height: 54px;
  padding-bottom: 44px;
  bottom: 0;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bottom-item{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 125px;
  color: rgba(255, 255, 255, 1);
  font-size: 16px;
  height: 54px;
}
.btn-icon{
  width: 22px;
  height: 22px;
  margin-right: 3px;
}
.vip-card{
  display: flex;
  justify-content: center;
  align-items: center;
}
.vip{
  width: 315px;
  height: 44px;
  padding: 16px 10px 16px 20px;
  border-radius: 9px;
  background-color: #10356D;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.open-vip{
  display: flex;
}
.vip-icon{
  width: 25px;
  height: 23px;
}
.vip-title{
  font-family: Alimama ShuHeiTi, Alimama ShuHeiTi;
  font-weight: 700;
  font-size: 16px;
  color: #FFFFFF;
  line-height: 20px;
  text-align: left;
  font-style: normal;
  text-transform: none;
}
.vip-text{
  color: #B5BAEA;
  font-size: 13px;
  line-height: 18px;
  margin-top: 5px;
}
.vip-right{
  width: 82px;
  height: 32px;
  border-radius: 16px;
  background-color: #fff;
  color: #003372;
  line-height: 17px;
  font-size: 14px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 700;
}
.shop-card{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
}
.shop {
  box-sizing: border-box;
  width: 345px;
  height: 82px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 26px 30px;
  background-color: #fff;
  border-radius: 10px;
  margin-bottom: 10px;
}
.shop-item{
  display: flex;
}
.shop-left{
  width: 1px;
  height: 30px;
  background-color: rgba(195, 201, 207, 0.753);
}
.shop-icon{
  width: 24px;
  height: 24px;
  margin-right: 10px;
}
.shop-text{
  color: #3D3D3D;
  font-size: 15px;
  line-height: 22px;
}