/* pages/components/mianCard/mainCard.wxss */
.main-card-page{
  height: 173px;
  width: 100%;
  padding: 20px 15px;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  border-bottom: 1px solid rgba(243, 243, 243, 1);
  background: #fff;
  font-family: PingFang SC, PingFang SC;
}
.main-card-avater{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10px;
}
.main-card-content{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.main-card-title{
  color: rgba(51, 51, 51, 1);
  font-size: 16px;
}
.main-card-tag{
  margin-top: 5px;
  color: rgba(96, 102, 111, 1);
  font-size: 14px;
  margin-bottom: 5px;
}
.main-card-text{
  color: rgba(51, 51, 51, 1);
  font-size: 14px;
  width: 280px;
}
.main-card-time{
  color: rgba(51, 51, 51, 1);
  font-size: 13px;
  margin-top: 28px;
}