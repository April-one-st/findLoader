/* pages/components/homeCard/homeCard.wxss */
.card {
    display: flex;
    padding: 13px 15px 11px 15px;
    border-bottom: 1px solid #f3f3f3;
    font-family: PingFang SC, PingFang SC;
}
.avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
}
.content {
    flex: 1;
    display: flex;
    flex-direction: column;
    margin-left: 12px;
    color: #60666f;
    font-size: 14px;
}
.name {
    color: #333333;
    font-size: 16px;
    line-height: 22px;
    text-align: left;
}
.price {
    color: #ff6b10;
    font-size: 18px;
}
.home-card-photo {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.photo-item {
    width: 91px;
    height: 91px;
    margin-top: 7px;
}
.Instructions {
    margin-top: 3px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    -webkit-line-clamp: 2; /* 控制显示的行数 */
    word-wrap: break-word;
}
.bottom {
    display: flex;
    justify-content: space-between;
    margin-top: 8px;
}
.address {
    color: #00479f;
    width: 130px;
    white-space: nowrap; /* 文本不换行 */
    overflow: hidden; /* 溢出部分隐藏 */
    text-overflow: ellipsis; /* 显示省略号 */
}
.time {
    width: 130px;
    white-space: nowrap; /* 文本不换行 */
    overflow: hidden; /* 溢出部分隐藏 */
    text-overflow: ellipsis; /* 显示省略号 */
}
.card-telephone {
    width: 63px;
    height: 34px;
    margin-right: 14px;
}
.card-leave {
    width: 63px;
    height: 34px;
}
