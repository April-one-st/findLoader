/* pages/components/homeCard/homeCard.wxss */
.card{
    display: flex;
    padding: 13px 15px 11px 15px;
    border-bottom: 1px solid #F3F3F3;
    font-family: PingFang SC, PingFang SC;
}
.avatar{
    width: 50px;
    height: 50px;
    border-radius: 50%;
}
.content{
    flex: 1;
    display: flex;
    flex-direction: column;
    margin-left: 12px;
    color: #60666F;
    font-size: 14px;
}
.name{
    color: #333333;
    font-size: 16px;
    line-height: 22px;
    text-align: left;
}
.price{
    color: #FF6B10;
    font-size: 18px;
}
.home-card-photo{
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.photo-item {
    width: 91px;
    height: 91px;
    margin-top: 7px;
}
.Instructions{
    margin-top: 3px;
}
.bottom{
    display: flex;
    justify-content: space-between;
    margin-top: 8px;
}
.address {
    color: #00479F;
}
.card-telephone{
    width: 63px;
    height: 34px;
    margin-right: 14px;
}
.card-leave{
    width: 63px;
    height: 34px;
}
