/* pages/components/publish/publish.wxss */
.publish-page{
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: rgba(245, 247, 250, 1);
}
.page-title{
    width: 100%;
    height: 44px;
    padding-top: 44px;
    text-align: center;
    line-height: 44px;
    background-color: #fff;
}
.form-title{
    height: 46px;
    line-height: 46px;
    padding: 0 15px;
    font-size: 14px;
    color: rgba(102, 102, 102, 1);
    display: flex;
    justify-content: space-between;
}
.form-photo {
    width: 100%;
    background-color: #fff;
    padding: 10px 15px;
    display: flex;
    flex-wrap: wrap;
}
.form-buttom{
    margin-top: 18px;
    display: flex;
    justify-content: center;
    align-items: center;
}
.ask-buy{
    width: 60px;
    height: 34px;
    border-radius: 4px;
    background-color: rgba(234, 234, 234, 1);
    color: rgba(51, 51, 51, 1);
    font-size: 14px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 15px;
    margin-top: 25px;
}
