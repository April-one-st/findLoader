/* pages/fans/fans.wxss */
.page-title{
  padding-top: 44px;
  width: 100%;
  height: 44px;
  padding-top: 44px;
  background-color: #fff;
  display: flex;
  /* flex-direction: column; */
  justify-content: space-around;
  align-items: center;
}
.tabs {
  width: 65%;
}
.page-fans{
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: auto;
  background-color: rgba(245, 247, 250, 1);
}
.fans-list{
  flex: 1;
  flex-direction: column;
  align-items: center;
  overflow: auto;
  background-color: rgba(245, 247, 250, 1);
  width: 100%;
}
.fans-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14px 16px;
}
.fans-avatar{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10px;
}
.fans-name{
  color: rgba(51, 51, 51, 1);
  font-size: 17px;
  flex: 1;
}
.fans-icon{
  width: 46px;
  height: 21px;
  border-radius: 4px;
  background-color: rgba(246, 119, 34, 1);
  color: #fff;
  font-size: 14px;
  display: flex;
  justify-content: center;
  align-items: center;
}