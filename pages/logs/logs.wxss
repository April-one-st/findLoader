/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  font-family: PingFang SC, PingFang SC;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  width: 156rpx;
  height: 156rpx;
  border-radius: 8px;
}

.avatar {
  display: block;
  width: 156rpx;
  height: 156rpx;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}
.login-btn {
  width: 670rpx;
  height: 96rpx;
  border-radius: 48px;
  background-color: #00479F;
  color: #FFFFFF;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 136rpx;
}
.agreement {
  margin-top: 28rpx;
  font-size: 12px;
  display: flex;
  align-items: center;
  line-height: 19px;
}
.radio-container{
  width: 14px !important;
  height: 14px !important;
}
.agreement-file {
  color: #00479F;
  font-size: 12px;
  display: inline-block;
  margin: 0;
  padding: 0;
}