/* pages/userData/userData.wxss */
.user-data-page{
    height: 100vh;
    display: flex;
    flex-direction: column;
    font-family: PingFang SC, PingFang SC;
}
.user-data-header{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 208px;
    position: relative;
    padding: 44px 15px 0px 15px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    /* background: linear-gradient( 180deg, #ECF4FF 0%, #FFFFFF 97%); */
}
.user-back{
    position: absolute;
    width: 375px;
    height: 227px;
    z-index: -1;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}
.nav {
    height: 44px;
    display: flex;
    align-items: center;
}
.title{
    margin-left: 120px;
}
.user-data{
    margin-top: 20px;
    display: flex;
    align-items: center;
}
.user-header{
    width: 60px;
    height: 60px;
    border-radius: 50%;
    margin-right: 10px;
}
.info{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.user-name {
    font-size: 18px;
    color: #3D3D3D;
}
.follow-vermicelli {
    margin-top: 18px;
    display: flex;
    align-items: center;
}
.follow-item{
    width: 125px;
    height: 40px;
    text-align: center;
}
.number{
    font-size: 20px;
    color: #333333;
}
.line{
    height: 30px;
    border-right: 1px solid rgba(0, 0, 0, 0.05);
}
.follow-title {
    font-size: 13px;
    color: #666666;
}
.user-data-content {
    flex: 1;
    overflow: hidden;
}
.van-tabs__nav{
    background-color: rgba(249, 249, 249, 1) !important;
}
.tag-merchant{
    height: 22px;
    width: 55px;
    margin-left: 7px;
}
.tag-vip {
    height: 22px;
    width: 76px;
}
.van-tabs__line{
    background-color: rgba(0, 71, 159, 1) !important;
}
.user-data-bottom{
    position: fixed;
    width: 100%;
    height: 54px;
    padding-bottom: 44px;
    bottom: 0;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.bottom-item{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 125px;
    color: rgba(255, 255, 255, 1);
    font-size: 16px;
    height: 54px;
}
.btn-icon{
    width: 22px;
    height: 22px;
    margin-right: 3px;
}
.add{
    background-color: rgba(69, 136, 219, 1);
}
.leave{
    background-color: rgba(246, 119, 34, 1);
}
.telephone {
    background-color: rgba(0, 71, 159, 1);
}