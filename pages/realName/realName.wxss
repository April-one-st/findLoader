/* pages/realName/realName.wxss */
.rela-name-page{
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: rgba(245, 247, 250, 1);
}
.form-title{
    height: 46px;
    line-height: 46px;
    padding: 0 15px;
    font-size: 14px;
    color: rgba(102, 102, 102, 1);
    display: flex;
    justify-content: space-between;
}
.form-upLoad{
    background: #fff;
    padding: 10px 15px;
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
}
.label{
    font-size: 15px;
    color: rgba(51, 51, 51, 1);
}
.placeholder{
    margin-top: 6px;
    color: rgba(153, 153, 153, 1);
    font-size: 13px;
}
.van-uploader__upload{
    width: 172px !important;
    height: 115px !important;
}
.icon {
    width: 16px;
    height: 16px;
}
.remark{
    padding: 0 15px;
    font-size: 12px;
    color: rgba(153, 153, 153, 1);
    display: flex;
    align-items: center;
}
.bottom{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 54px;
    padding-bottom: 34px;
    background-color: #fff;
}
.form-buttom{
    margin-top: 18px;
    display: flex;
    justify-content: center;
    align-items: center;
}